@model IEnumerable<AsianFlix.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid p-4 cadastrar">

    <h1>Index</h1>

    <p>
        <a asp-action="Create" class="btn btn-asian">Create New</a>
    </p>
    <table class="table customTable text-light">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ClienteName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DtNascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cpf)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FormaPagamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PasswordConfirmation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClienteName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DtNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FormaPagamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PasswordConfirmation)
                </td>
                <td>
                        <a asp-action="Edit" asp-route-id="@item.ClienteID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ClienteID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ClienteID">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>